doctype html
html
  head
    title File Upload
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
  body
    .container
      h4.text-center
        | Near-Real Time Threat Detection
        h4
          br
          form.form-inline(method='POST', action='/upload', enctype='multipart/form-data')
            .form-group
              label(for='file-uploader') Upload Log File
              |  
              input.form-control(type='file', name='fupload')
            |  
            button.btn.btn-info(type='submit') Submit
          span.text-danger.hidden
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.0/jquery.min.js')
